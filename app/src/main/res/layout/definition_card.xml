<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="5dp"
    android:layout_gravity="center"
    android:background="@android:color/black"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Reclaiming my time"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txexplanation"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="When people are on your time but wasting it!"
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txexample"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_italic"
            android:text="Maxine: Are you familiar with the May 23rd letter that I sent Munchkin: Thank you for having me here, you're such a beautifu- Maxine: RECLAIMING MY TIME. -- Answer the question, hoe."
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_bold"
                android:text="By:"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txbyline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto"
                android:text="Dawta IMVU July 31, 2017"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"

                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/thumbsup_ic"/>

            <TextView
                android:id="@+id/txlikes"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="700"
                android:textColor="#B3000000"
                android:textSize="17dp" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/thumbsdown_ic"
                android:scaleY="0.6"
                android:scaleX="0.6"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txdislikes"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="700"
                android:textColor="#B3000000"
                android:textSize="17dp" />


        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>